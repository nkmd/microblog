{% extends 'base.html.twig' %}

{% block banner %}
    <div class="jumbotron bgr_banner" style=" {{ banner }} ">
        <div class="container" style="">
            <h1 class="display-3" style="color:#d3cfcf;">Пример Авторского Блога.</h1>
            <h4 style="color:#d3cfcf"> !!! "сие" -  развёрнуто, условию Т.З. согласно !!! </h4>
            <h4 style="color:#d3cfcf"> Cреда: VirtualBox; ОС Linux; Apache 2.4; Php 5.6; MySql 14.14; Symfony 2.8; Composer; | © 2023</h4>
            <p>&nbsp;</p>
            <p><a class="btn btn-primary btn-lg" href="{{ path('blog') }}" role="button">Все публикации автора &raquo;</a></p>
        </div>
    </div>
{% endblock %}


{% block body %}

    {% if message %}
        <div class="alert alert-primary" role="alert">{{ message }}</div>
    {% endif %}

    <div class="album py-5 bg-light">
        <div class="container">
            <h2>Последнии статьи:</h2>
            <p>&nbsp;</p>
            <div class="row">

                {% for entry in data %}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">категория: {{ entry.cat_name }}</small>
                                {% if entry.access == 'vip' %}
                                    <small class="text-muted"><span class="badge badge-primary"> {{ entry.access }} </span></small>
                                {% endif %}
                            </div>
                            <h2>{{ entry.title }}</h2>
                            {% if entry.content|length > 0 %}
                                <p class="card-text">{{ entry.content|striptags|slice(0, 100) ~ '...' }}</p>
                            {% endif %}
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('article', {'id': entry.id}) }}" type="button" class="btn btn-sm btn-outline-secondary">Читать</a>

                                    {% if (user_authorized is defined ) and (user_authorized|length > 1) and (user_authorized.session_user_role == 'admin') %}
                                    <a href="{{ path('editarticle', {'id': entry.id}) }}" type="button" class="btn btn-sm btn-outline-secondary">Ред.</a>
                                    {% endif %}

                                </div>
                                {% if entry.status == 'deleted' or entry.status == 'draft' %}
                                    <small class="text-muted"><span class="badge badge-danger"> {{ entry.status }} </span></small>
                                {% endif %}
                                <small class="text-muted">{{ entry.date }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>


{% endblock %}
