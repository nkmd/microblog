{% extends 'base.html.twig' %}


{% block body %}

    {% if message %}
        <div class="alert alert-primary message_nk" role="alert">{{ message }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                <h3 class="pb-3 mb-4 font-italic border-bottom">
                    Статья:
                </h3>

                <!-- blog-post -->
                {% for entry in data %}
                <div class="blog-post">
                    <h2 class="blog-post-title"> {{ entry.title }}</h2>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="blog-post-meta"> Категория: {{ entry.cat_name }} </p>
                        <p class="blog-post-meta"> {{ entry.date }}</p>
                        {% if entry.access == 'vip' %}
                            <p class="text-muted">Доступ: <span class="badge badge-primary"> {{ entry.access }} </span></p>
                        {% endif %}
                        {% if entry.status == 'deleted' or entry.status == 'draft' %}
                            <p class="text-muted"><span class="badge badge-danger"> {{ entry.status }} </span></p>
                        {% endif %}
                    </div>
                    <div> {{ entry.content|raw }} </div>
                </div>
                <!-- /.blog-post -->

                <div class="d-flex justify-content-between align-items-center">
                    {% if (user_authorized is defined ) and (user_authorized|length > 1) and (user_authorized.session_user_role == 'admin') %}
                        <a href="{{ path('editarticle', {'id': entry.id}) }}" type="button" class="btn  btn-success">Редактировать</a>
                    {% endif %}
                </div>
                {% endfor  %}



                <hr>
            </div>
            <!-- /.blog-main -->

            <aside class="col-md-4 blog-sidebar">

                <div class="p-3 mb-3 bg-light rounded">
                    <h4 class="font-italic">Мемн дня:</h4>
                    <p class="mb-0">{{ hotMessage }}</p>
                </div>

                <div class="p-3 mb-3 bg-light rounded">
                    <h4 class="font-italic">Демотиватор дня:</h4>
                    <p class="mb-0">
                        <a href="{{ imgMessage|raw }}" target="_blank">
                            <img src="{{ imgMessage|raw }}" style="max-width:300px;" />
                        </a>
                    </p>
                </div>


                <div class="p-3">
                    <h4 class="font-italic">Усё! Далее только за $$$$ :)</h4>
                    <p>================</p>
                </div>

                <div class="p-3">
                    <h4 class="font-italic">Архив, возможно :)</h4>
                    <ol class="list-unstyled mb-0">
                        <li><a href="#">Октябрь 2023</a></li>
                        <li><a href="#">Ноябрь 2023</a></li>
                        <li><a href="#">Декабрь 2023</a></li>
                    </ol>
                </div>

                <div class="p-3">
                    <h4 class="font-italic">Соцсети, типа :)</h4>
                    <ol class="list-unstyled">
                        <li><a href="#">GitHub</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Facebook</a></li>
                    </ol>
                </div>
            </aside>
            <!-- /.blog-sidebar -->

        </div>
    </div>

{% endblock %}
